@{
    ViewData["Title"] = "AI Chat";
}

<div class="chat-page">
    <h2>AI Assistant</h2>

    <div id="chat-window" class="chat-window">
        <!-- сообщения появятся здесь -->
    </div>

    <div class="chat-input">
        <input type="text" id="chat-prompt" placeholder="Type your message…" />
        <button id="chat-send">Send</button>
    </div>
</div>

@section Styles {
    <style>
        .chat-page {
            max-width: 500px;
            margin: 40px auto;
            font-family: sans-serif;
        }

        .chat-window {
            border: 1px solid #ccc;
            border-radius: 6px;
            height: 300px;
            overflow-y: auto;
            padding: 10px;
            background: #fafafa;
        }

            .chat-window .msg {
                margin: 8px 0;
                padding: 6px 10px;
                border-radius: 4px;
                max-width: 80%;
                word-wrap: break-word;
            }

            .chat-window .user {
                background: #d1e7dd;
                align-self: flex-end;
                margin-left: auto;
            }

            .chat-window .bot {
                background: #e2e3e5;
                align-self: flex-start;
                margin-right: auto;
            }

        .chat-input {
            display: flex;
            margin-top: 12px;
        }

            .chat-input input {
                flex: 1;
                padding: 8px;
                font-size: 1rem;
                border: 1px solid #ccc;
                border-radius: 4px 0 0 4px;
                outline: none;
            }

            .chat-input button {
                padding: 0 16px;
                border: 1px solid #ccc;
                border-left: none;
                border-radius: 0 4px 4px 0;
                background: #0d6efd;
                color: #fff;
                cursor: pointer;
            }
    </style>
}

@section Scripts {
    <script>
        const win = document.getElementById("chat-window");
        const input = document.getElementById("chat-prompt");
        const btn   = document.getElementById("chat-send");

        btn.addEventListener("click", sendMessage);
        input.addEventListener("keydown", e => {
          if (e.key === "Enter") sendMessage();
        });

        async function sendMessage() {
          const text = input.value.trim();
          if (!text) return;
          append("user", text);
          input.value = "";
          win.scrollTop = win.scrollHeight;

          try {
            const res = await fetch("/api/ai/chat", {
              method: "POST",
              headers: {"Content-Type":"application/json"},
              body: JSON.stringify({ prompt: text })
            });
            const data = await res.json();
            append("bot", data.reply);
          } catch (err) {
            append("bot", "Error: " + err.message);
          }
          win.scrollTop = win.scrollHeight;
        }

        function append(who, txt) {
          const div = document.createElement("div");
          div.className = `msg ${who}`;
          div.textContent = txt;
          win.append(div);
        }
    </script>
}
